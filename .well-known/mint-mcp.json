{
  "project": {
    "name": "MINT-MCP",
    "description": "Multi-Server Model Context Protocol Architecture",
    "version": "2.0.0",
    "repository": "https://github.com/data-mint-research/mint-mcp",
    "homepage": "https://github.com/data-mint-research/mint-mcp",
    "documentation": "https://github.com/data-mint-research/mint-mcp/tree/main/docs"
  },
